			<control type="textbox">
				<description>Remove column Label</description>
				<left>5</left>
				<top>110</top>
				<width>110</width>
				<height>40</height>
				<font>font14</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>bottom</aligny>
				<label>[COLOR $INFO[Window().Property(umbrella.highlight.color)]]Remove[/COLOR]</label>
			</control>
			<control type="textbox">
				<description>Total Watch List Items Label</description>
