				<orientation>Vertical</orientation>
				<itemlayout height="100" width="1325">
					<control type="image">
						<left>10</left>
						<top>0</top>
						<width>75</width>
						<align>left</align>
						<aligny>center</aligny>
						<aspectratio>keep</aspectratio>
						<texture>common/box2.png</texture>
					</control>
					<control type="image">
						<left>25</left>
						<top>0</top>
						<width>50</width>
						<align>left</align>
						<aligny>center</aligny>
						<aspectratio>keep</aspectratio>
						<texture>common/selected2.png</texture>
						<visible>!String.isEmpty(ListItem.Property(umbrella.isSelected))</visible>
					</control>
					<control type="label">
						<description>Line1 tvshowtitle</description>
						<left>110</left>
						<top>15</top>
						<width>1240</width>
						<height>25</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<align>left</align>
						<aligny>bottom</aligny>
						<label>[COLOR $INFO[Window().Property(umbrella.highlight.color)]][B]$INFO[ListItem.Property(umbrella.count)]  $INFO[ListItem.Property(umbrella.title)][/B][/COLOR]</label>
					</control>
					<control type="label">
						<description>Line2 year-genre-mpaa</description>
						<left>180</left>
						<top>50</top>
						<width>1170</width>
						<height>25</height>
						<font>font12</font>
						<textcolor>white</textcolor>
						<align>left</align>
						<aligny>top</aligny>
						<label>$INFO[ListItem.Property(umbrella.year)]   [COLOR $INFO[Window().Property(umbrella.highlight.color)]]|[/COLOR]   $INFO[ListItem.Property(umbrella.genre)]   [COLOR $INFO[Window().Property(umbrella.highlight.color)]]|[/COLOR]   $INFO[ListItem.Property(umbrella.mpaa)]</label>
					</control>
				</itemlayout>

				<focusedlayout height="100" width="1325">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>1350</width>
						<height>100</height>
						<texture colordiffuse="$INFO[Window().Property(umbrella.highlight.color)]">common/umbwhite.png</texture>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>1350</width>
						<height>100</height>
						<texture colordiffuse="gainsboro">common/umbwhite.png</texture>
						<visible>!Control.HasFocus(2050)</visible>
					</control>
					<control type="image">
						<left>10</left>
						<top>0</top>
