						<!-- <visible>String.IsEmpty(Window().Property(umbrella.clearlogo))</visible> -->
					<!-- </control> -->
			</control>

			<control type="grouplist" id="2053">
				<description>ListItem Poster and Plot</description>
				<left>1350</left>
				<top>150</top>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
					<control type="image">
						<width>486</width>
						<height>729</height>
						<align>left</align>
						<aligny>center</aligny>
						<aspectratio aligny="top">keep</aspectratio>
						<texture background="true">$INFO[Container(2050).ListItem.Property(umbrella.poster)]</texture>
						<!-- <visible>!String.isEmpty(Container(2050).ListItem.Property(umbrella.poster))</visible> -->
					</control>
					<control type="textbox">
						<description>Plot</description>
						<width>486</width>
						<height>185</height>
						<font>font12</font>
						<align>justify</align>
						<aligny>top</aligny>
						<wrapmultiline>true</wrapmultiline>
						<label>$INFO[Container(2050).ListItem.Property(umbrella.plot)]</label>
						<textcolor>white</textcolor>
						<autoscroll time="2000" delay="1500" repeat="5000"></autoscroll>
					</control>
			</control>

			<control type="grouplist" id="2054">
				<description>Studio icons and ratings</description>
				<left>180</left>
				<top>965</top>
				<width>1250</width>
				<height>100</height>
				<itemgap>25</itemgap>
				<orientation>horizontal</orientation>
					<control type="image">
						<description>Colored Studio icons</description>
						<width>100</width>
						<height>100</height>
						<align>left</align>
						<aligny>center</aligny>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[Container(2050).ListItem.Property(umbrella.studio),resource://resource.images.studios.coloured/,.png]</texture>
						<visible>System.HasAddon(resource.images.studios.coloured) + System.AddonIsEnabled(resource.images.studios.coloured) + Skin.HasSetting(coloredflags) + !String.IsEmpty(Container(2050).ListItem.Property(umbrella.studio))</visible>
					</control>
					<control type="image">
						<description>White Studio icons</description>
						<width>100</width>
						<height>100</height>
						<align>left</align>
						<aligny>center</aligny>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[Container(2050).ListItem.Property(umbrella.studio),resource://resource.images.studios.white/,.png]</texture>
						<visible>System.HasAddon(resource.images.studios.white) + System.AddonIsEnabled(resource.images.studios.white) + !Skin.HasSetting(coloredflags) + !String.IsEmpty(Container(2050).ListItem.Property(umbrella.studio))</visible>
					</control>
					<control type="image">
						<description>rating icon</description>
						<width>25</width>
						<height>25</height>
						<aspect>keep</aspect>
						<texture colordiffuse="FFFF4081">common/umbstar.png</texture>
						<animation effect="slide" end="20,35" time="0" condition="true">Conditional</animation>
						<visible>!String.IsEmpty(Container(2050).ListItem.Property(umbrella.rating))</visible>
					</control>
					<control type="label">
						<width>auto</width>
						<height>35</height>
						<aligny>center</aligny>
						<label>$INFO[Container(2050).ListItem.Property(umbrella.rating), ,   ]</label>
						<animation effect="slide" end="0,30" time="0" condition="true">Conditional</animation>
						<font>font12</font>
						<textcolor>eeffffff</textcolor>
						<shadowcolor>ff000000</shadowcolor>
						<visible>!String.IsEmpty(Container(2050).ListItem.Property(umbrella.rating))</visible>
					</control>
