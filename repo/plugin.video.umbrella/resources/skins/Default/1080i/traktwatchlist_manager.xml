						<texture>common/box2.png</texture>
					</control>
					<control type="image">
						<left>25</left>
						<top>0</top>
						<width>50</width>
						<align>left</align>
						<aligny>center</aligny>
						<aspectratio>keep</aspectratio>
						<texture>common/selected2.png</texture>
						<visible>!String.isEmpty(ListItem.Property(umbrella.isSelected))</visible>
					</control>
					<control type="label">
						<description>Line1 tvshowtitle</description>
						<left>110</left>
						<top>15</top>
						<width>1240</width>
						<height>25</height>
						<font>font13</font>
						<textcolor>black</textcolor>
						<align>left</align>
						<aligny>bottom</aligny>
						<label>[B]$INFO[ListItem.Property(umbrella.count)]  $INFO[ListItem.Property(umbrella.title)][/B]</label>
					</control>
					<control type="label">
						<description>Line2 year-genre-mpaa</description>
						<left>180</left>
						<top>50</top>
						<width>1170</width>
						<height>25</height>
						<font>font12</font>
						<textcolor>black</textcolor>
						<align>left</align>
						<aligny>top</aligny>
						<label>[B]$INFO[ListItem.Property(umbrella.year)]   [COLOR black]|[/COLOR]   $INFO[ListItem.Property(umbrella.genre)]   [COLOR black]|[/COLOR]   $INFO[ListItem.Property(umbrella.mpaa)][/B]</label>
					</control>
				</focusedlayout>
			</control>

			<control type="group">
				<left>1470</left>
				<top>50</top>
					<control type="button" id="2051">
						<description>OK Button</description>
						<onright>2052</onright>
						<onleft>2050</onleft>
						<width>120</width>
						<height>70</height>
						<textoffsetx>0</textoffsetx>
						<texturefocus colordiffuse="$INFO[Window().Property(umbrella.highlight.color)]">common/umbbutton5.png</texturefocus>
						<texturenofocus>common/umbbutton5.png</texturenofocus>
						<label>$ADDON[plugin.video.umbrella 32179]</label>
						<font>font12</font>
						<align>center</align>
						<textcolor>white</textcolor>
						<focusedcolor>white</focusedcolor>
						<visible>true</visible>
					</control>
					<control type="button" id="2052">
						<description>Cancel Button</description>
						<left>140</left>
						<onright>2050</onright>
						<onleft>2051</onleft>
						<width>120</width>
						<height>70</height>
						<textoffsetx>0</textoffsetx>
						<texturefocus colordiffuse="$INFO[Window().Property(umbrella.highlight.color)]">common/umbbutton5.png</texturefocus>
						<texturenofocus>common/umbbutton5.png</texturenofocus>
						<label>$ADDON[plugin.video.umbrella 32180]</label>
						<font>font12</font>
						<align>center</align>
						<textcolor>white</textcolor>
						<focusedcolor>white</focusedcolor>
						<visible>true</visible>
					</control>
			</control>

			<control type="group">
					<control type="image">

						<aspectratio align="center" aligny="center">keep</aspectratio>
						<left>400</left>
						<top>0</top>
						<width>600</width>
						<height>175%</height>
						<texture background="true">$INFO[Container(2050).ListItem.Property(umbrella.clearlogo)]</texture>
						<!-- <visible>!String.IsEmpty(Container(2050).ListItem.Property(umbrella.clearlogo))</visible> -->
					</control>
