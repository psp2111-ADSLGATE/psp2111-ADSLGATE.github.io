<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3011</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <animation type="Visible" reversible="false">
        <effect type="fade" start="0" end="100" time="300" delay="0"/>
    </animation>
    <animation type="WindowOpen" reversible="false">
        <effect type="fade" start="0" end="100" time="300" delay="0"/>
    </animation>
    <controls>
        <control type="image">
            <height>400</height>
            <texture>common/umbdim-top.png</texture>
        </control>
        <control type="grouplist">
            <left>15</left>
            <top>25</top>
            <width>80</width>
            <itemgap>10</itemgap>
            <orientation>vertical</orientation>
            <visible>String.IsEmpty(Window().Property(umbrella.hidebutton))</visible>
            <control type="button" id="3013">
                <width>50</width>
                <height>50</height>
                <onleft>3012</onleft>
                <onright>3011</onright>
                <onup>3012</onup>
                <ondown>3011</ondown>
                <font>font10</font>
                <texturefocus colordiffuse="$INFO[Window().Property(skin.selectColor)]">common/umbhideround.png</texturefocus>
                <texturenofocus colordiffuse="59ffffff">common/umbhideround2.png</texturenofocus>
                <align>center</align>
            </control>
            <control type="button" id="3011">
                <width>50</width>
                <height>50</height>
                <onleft>3013</onleft>
                <onright>3012</onright>
                <onup>3013</onup>
                <ondown>3012</ondown>
                <font>font10</font>
                <texturefocus colordiffuse="$INFO[Window().Property(skin.selectColor)]">common/umbplayround.png</texturefocus>
                <texturenofocus colordiffuse="59ffffff">common/umbplayround2.png</texturenofocus>
                <align>center</align>
            </control>
            <control type="button" id="3012">
                <width>50</width>
                <height>50</height>
                <onleft>3011</onleft>
                <onright>3013</onright>
                <onup>3011</onup>
                <ondown>3013</ondown>
                <font>font10</font>
                <texturefocus colordiffuse="$INFO[Window().Property(skin.selectColor)]">common/umbstopround.png</texturefocus>
                <texturenofocus colordiffuse="59ffffff">common/umbstopround2.png</texturenofocus>
                <align>center</align>
            </control>
        </control>
        <control type="grouplist">
            <left>15</left>
            <top>50</top>
            <width>80</width>
            <itemgap>10</itemgap>
            <orientation>vertical</orientation>
            <visible>!String.IsEmpty(Window().Property(umbrella.hidebutton))</visible>
            <control type="button" id="3011">
                <width>50</width>
                <height>50</height>
                <onleft>3012</onleft>
                <onright>3012</onright>
                <onup>3012</onup>
                <ondown>3012</ondown>
                <font>font10</font>
                <texturefocus colordiffuse="$INFO[Window().Property(skin.selectColor)]">common/umbplayround.png</texturefocus>
                <texturenofocus colordiffuse="59ffffff">common/umbplayround2.png</texturenofocus>
                <align>center</align>
            </control>
            <control type="button" id="3012">
                <width>50</width>
                <height>50</height>
                <onleft>3011</onleft>
                <onright>3011</onright>
                <onup>3011</onup>
                <ondown>3011</ondown>
                <font>font10</font>
                <texturefocus colordiffuse="$INFO[Window().Property(skin.selectColor)]">common/umbstopround.png</texturefocus>
                <texturenofocus colordiffuse="59ffffff">common/umbstopround2.png</texturenofocus>
                <align>center</align>
            </control>
        </control>
        <control type="group">
            <left>80</left>
            <top>30</top>
            <height>160</height>
            <control type="group">
                <width>284</width>
                <control type="image">
                    <texture diffuse="diffuse/landscape_w284_h160.png">$INFO[Window().Property(umbrella.thumb)]</texture>
                    <aspectratio scalediffuse="false">scale</aspectratio>
                </control>
                <control type="image">
                    <texture colordiffuse="80000000">diffuse/landscape_w284_h28.png</texture>
                    <visible>!String.IsEqual(Window().Property(umbrella.episode_type),standard) + !String.IsEmpty(Window().Property(umbrella.episode_type))</visible>
                    <height>30</height>
                </control>
                <control type="image">
                    <texture>common/mid_season_finale.png</texture>
                    <height>30</height>
                    <visible>String.IsEqual(Window().Property(umbrella.episode_type),mid_season_finale)</visible>
                </control>
                <control type="image">
                    <texture>common/mid_season_premiere.png</texture>
                    <height>30</height>
                    <visible>String.IsEqual(Window().Property(umbrella.episode_type),mid_season_premiere)</visible>
                </control>
                <control type="image">
                    <texture>common/season_finale.png</texture>
                    <height>30</height>
                    <visible>String.IsEqual(Window().Property(umbrella.episode_type),season_finale)</visible>
                </control>
                <control type="image">
                    <texture>common/season_premiere.png</texture>
                    <height>30</height>
                    <visible>String.IsEqual(Window().Property(umbrella.episode_type),season_premiere)</visible>
                </control>
                <control type="image">
                    <texture>common/series_finale.png</texture>
                    <height>30</height>
                    <visible>String.IsEqual(Window().Property(umbrella.episode_type),series_finale)</visible>
                </control>
                <control type="progress" id="3014">
                    <bottom>0</bottom>
                    <height>8</height>
                    <texturebg colordiffuse="FF00000">common/umbprogresswhitesmall.png</texturebg>
                    <midtexture colordiffuse="$INFO[Window().Property(skin.selectColor)]">common/umbprogresswhitesmall.png</midtexture>
                    <visible>false</visible>
                </control>
            </control>
            <control type="group">
                <left>284</left>
                <control type="label">
                    <left>40</left>
                    <aligny>center</aligny>
                    <height>40</height>
                    <label>[B]Next Episode in [COLOR $INFO[Window().Property(skin.selectColor)]][B]$INFO[Player.TimeRemaining(ss)][/B][/COLOR] seconds...</label>
                    <textcolor>ffededed</textcolor>
                    <!-- <font>font_mainlabel</font> -->
					<visible>Integer.IsLess(Player.TimeRemaining,60)</visible>
                </control>
				<control type="label">
                    <left>40</left>
                    <aligny>center</aligny>
                    <height>40</height>
                    <label>[B]Next Episode in [COLOR $INFO[Window().Property(skin.selectColor)]]$INFO[Player.TimeRemaining(m:ss)][/B][/COLOR]</label>
                    <textcolor>ffededed</textcolor>
                    <!-- <font>font_mainlabel</font> -->
					<visible>Integer.IsGreaterOrEqual(Player.TimeRemaining,60)</visible>
                </control>
                <control type="group">
                    <left>44</left>
                    <top>40</top>
                    <height>40</height>
                    <control type="group">
                        <centertop>50%</centertop>
                        <height>80</height>
                        <control type="image">
                            <aspectratio align="left">keep</aspectratio>
                            <texture colordiffuse="e7ededed">flags/quality/info.png</texture>
                            <centertop>52%</centertop>
                            <width>37</width>
                            <height>24</height>
                        </control>
                        <control type="grouplist">
                            <left>47</left>
                            <orientation>horizontal</orientation>
                            <height>80</height>
                            <itemgap>10</itemgap>
                            <control type="button">
                                <width>auto</width>
                                <aligny>center</aligny>
                                <label>$INFO[Window().Property(umbrella.tvshowtitle),, - ]$INFO[Window().Property(umbrella.season),,]x$INFO[Window().Property(umbrella.episode),, - ]$INFO[Window().Property(umbrella.title)]</label>
                                <textcolor>e7ededed</textcolor>
                                <!-- <font>font_mini_bold</font> -->
                                <visible>!String.IsEmpty(Window.Property(umbrella.title))</visible>
                                <textoffsetx>0</textoffsetx>
                                <texturefocus />
                                <texturenofocus />
                            </control>
                            <control type="button">
                                <width>auto</width>
                                <aligny>center</aligny>
                                <label>$INFO[Window().Property(umbrella.rating)]</label>
                                <textcolor>e7ededed</textcolor>
                                <!-- <font>font_mini_bold</font> -->
                                <visible>!String.IsEmpty(Window.Property(umbrella.rating))</visible>
                                <textoffsetx>0</textoffsetx>
                                <texturefocus />
                                <texturenofocus />
                            </control>
                            <control type="group">
                                <control type="image">
                                    <description>rating icon</description>
                                    <top>18</top>
                                    <width>26</width>
                                    <height>26</height>
                                    <aspect>keep</aspect>
                                    <texture colordiffuse="$INFO[Window().Property(skin.selectColor)]">common/umbstar.png</texture>
                                    <animation effect="slide" end="0,8" time="0" condition="true">Conditional</animation>
                                    <visible>!String.IsEmpty(Window().Property(umbrella.rating))</visible>
                                </control>
                            </control>
                        </control>
                    </control>
                </control>
            </control>
        </control>
        <control type="button" id="3014">
            <nested />
            <top>-1000</top>
            <left>-1000</left>
            <width>1</width>
            <height>1</height>
            <texturefocus />
            <texturenofocus />
            <font />
            <visible allowhiddenfocus="true">False</visible>
        </control>
    </controls>
</window>