<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <animation type="WindowOpen" reversible="false">
        <effect type="slide" start="0,-260" end="0,0" time="350" />
    </animation>
    <controls>
        <control type="group">
            <left>1320</left>
            <control type="group">
                <left>5</left>
                <top>5</top>
                <control type="image">
                    <left>-5</left>
                    <top>-5</top>
                    <height>260</height>
                    <width>600</width>
                    <texture colordiffuse="FF000000">common/white.png</texture>
                </control>
                <control type="image">
                    <height>210</height>
                    <width>590</width>
                    <aspectratio aligny="top">stretch</aspectratio>
                    <texture>$INFO[Window.Property(tikiskins.fanart)]</texture>
                    <animation effect="fade" start="100" end="20" time="0" tween="sine">WindowOpen</animation>
                </control>
                <control type="image">
                    <left>538</left>
                    <top>6</top>
                    <width>45</width>
                    <height>45</height>
                    <aspectratio aligny="top">keep</aspectratio>
                    <texture>pov.png</texture>
                </control>
                <control type="image">
                    <height>230</height>
                    <width>145</width>
                    <aspectratio aligny="left">scale</aspectratio>
                    <texture>$INFO[Window.Property(tikiskins.poster)]</texture>
                </control>
                <!-- Next Episode -->
                <control type="group">
                    <visible>String.IsEqual(Window.Property(tikiskins.nextep_function),next_ep)</visible>
                    <control type="label">
                        <top>5</top>
                        <left>160</left>
                        <width>380</width>
                        <height>20</height>
                        <aligny>bottom</aligny>
                        <align>left</align>
                        <font>font14</font>
                        <label>[B]$ADDON[plugin.video.pov 33041].... $INFO[Player.TimeRemaining()][/B]</label>
                    </control>
                    <control type="textbox">
                        <left>160</left>
                        <top>70</top>
                        <width>420</width>
                        <height>96</height>
                        <font>font10</font>
                        <align>left</align>
                        <aligny>top</aligny>
                        <label>$INFO[Window.Property(tikiskins.next_episode)]</label>
                        <textcolor>FFB7B4BB</textcolor>
                        <autoscroll>true</autoscroll>
                    </control>
                    <control type="group">
                        <left>150</left>
                        <top>185</top>
                        <control type="button" id="10">
                            <description>Close</description>
                            <animation effect="zoom" start="100" end="102" time="50" tween="sine" easing="inout" center="auto">Focus</animation>
                            <animation effect="zoom" start="102" end="100" time="50" tween="sine" easing="inout" center="auto">Unfocus</animation>
                            <left>0</left>
                            <width>140</width>
                            <height>45</height>
                            <onleft>12</onleft>
                            <onright>11</onright>
                            <label>$ADDON[plugin.video.pov 32614]</label>
                            <font>font10</font>
                            <textcolor>FFB7B4BB</textcolor>
                            <focusedcolor>FF302F2F</focusedcolor>
                            <texturefocus colordiffuse="'FFB7B4BB'">common/white.png</texturefocus>
                            <texturenofocus colordiffuse="FF4a4347">common/white.png</texturenofocus>
                            <align>center</align>
                        </control>
                        <control type="button" id="11">
                            <description>Play</description>
                            <animation effect="zoom" start="100" end="102" time="50" tween="sine" easing="inout" center="auto">Focus</animation>
                            <animation effect="zoom" start="102" end="100" time="50" tween="sine" easing="inout" center="auto">Unfocus</animation>
                            <left>147</left>
                            <width>140</width>
                            <height>45</height>
                            <onleft>10</onleft>
                            <onright>12</onright>
                            <label>$ADDON[plugin.video.pov 32764]</label>
                            <font>font10</font>
                            <textcolor>FFB7B4BB</textcolor>
                            <focusedcolor>FF302F2F</focusedcolor>
                            <texturefocus colordiffuse="'FFB7B4BB'">common/white.png</texturefocus>
                            <texturenofocus colordiffuse="FF4a4347">common/white.png</texturenofocus>
                            <align>center</align>
                        </control>
                        <control type="button" id="12">
                            <description>Cancel</description>
                            <animation effect="zoom" start="100" end="102" time="50" tween="sine" easing="inout" center="auto">Focus</animation>
                            <animation effect="zoom" start="102" end="100" time="50" tween="sine" easing="inout" center="auto">Unfocus</animation>
                            <left>294</left>
                            <width>140</width>
                            <height>45</height>
                            <onleft>11</onleft>
                            <onright>10</onright>
                            <label>$ADDON[plugin.video.pov 32840]</label>
                            <font>font10</font>
                            <textcolor>FFB7B4BB</textcolor>
                            <focusedcolor>FF302F2F</focusedcolor>
                            <texturefocus colordiffuse="'FFB7B4BB'">common/white.png</texturefocus>
                            <texturenofocus colordiffuse="FF4a4347">common/white.png</texturenofocus>
                            <align>center</align>
                        </control>
                    </control>
                </control>
                <!-- Confirm -->
                <control type="group">
                    <visible>String.IsEqual(Window.Property(tikiskins.nextep_function),confirm)</visible>
                    <control type="label">
                        <top>5</top>
                        <left>160</left>
                        <width>380</width>
                        <height>20</height>
                        <aligny>bottom</aligny>
                        <align>left</align>
                        <font>font14</font>
                        <label>[B]$ADDON[plugin.video.pov 32802][/B]</label>
                    </control>
                    <control type="textbox">
                        <left>160</left>
                        <top>70</top>
                        <width>420</width>
                        <height>96</height>
                        <font>font12</font>
                        <align>left</align>
                        <aligny>bottom</aligny>
                        <label>$INFO[Window.Property(tikiskins.title)]</label>
                        <textcolor>FFB7B4BB</textcolor>
                        <autoscroll>true</autoscroll>
                    </control>
                    <control type="group">
                        <left>170</left>
                        <top>185</top>
                        <control type="button" id="10">
                            <description>Yes</description>
                            <animation effect="zoom" start="100" end="102" time="50" tween="sine" easing="inout" center="auto">Focus</animation>
                            <animation effect="zoom" start="102" end="100" time="50" tween="sine" easing="inout" center="auto">Unfocus</animation>
                            <left>0</left>
                            <width>195</width>
                            <height>45</height>
                            <onleft>11</onleft>
                            <onright>11</onright>
                            <label>$ADDON[plugin.video.pov 32824]</label>
                            <font>font10</font>
                            <textcolor>FFB7B4BB</textcolor>
                            <focusedcolor>FF302F2F</focusedcolor>
                            <texturefocus colordiffuse="'FFB7B4BB'">common/white.png</texturefocus>
                            <texturenofocus colordiffuse="FF4a4347">common/white.png</texturenofocus>
                            <align>center</align>
                        </control>
                        <control type="button" id="11">
                            <description>No</description>
                            <animation effect="zoom" start="100" end="102" time="100" tween="sine" easing="inout" center="auto">Focus</animation>
                            <animation effect="zoom" start="102" end="100" time="100" tween="sine" easing="inout" center="auto">Unfocus</animation>
                            <left>205</left>
                            <width>195</width>
                            <height>45</height>
                            <onleft>10</onleft>
                            <onright>10</onright>
                            <label>$ADDON[plugin.video.pov 32828]</label>
                            <font>font10</font>
                            <textcolor>FFB7B4BB</textcolor>
                            <focusedcolor>FF302F2F</focusedcolor>
                            <texturefocus colordiffuse="'FFB7B4BB'">common/white.png</texturefocus>
                            <texturenofocus colordiffuse="FF4a4347">common/white.png</texturenofocus>
                            <align>center</align>
                        </control>
                    </control>
                </control>
                <control type="progress" id="5000">
                    <description>Progressbar</description>
                    <top>234</top>
                    <left>0</left>
                    <width>590</width>
                    <height>17</height>
                    <reveal>true</reveal>
                </control>
            </control>
        </control>
    </controls>
</window>

