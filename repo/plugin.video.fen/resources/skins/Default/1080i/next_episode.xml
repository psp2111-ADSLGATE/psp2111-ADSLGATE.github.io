<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <animation type="WindowOpen" reversible="false">
        <effect type="fade" end="100" time="600" />
    </animation>
    <controls>
        <control type="image">
            <height>550</height>
            <texture>fen_common/dim-top.png</texture>
        </control>
        <control type="group">
            <left>20</left>
            <top>20</top>
            <height>160</height>
            <control type="image">
                <left>-1</left>
                <top>-1</top>
                <width>286</width>
                <height>162</height>
                <texture border="16" colordiffuse="Window(10000).Property(fen.main_highlight)">fen_common/dialog.png</texture>
            </control>
            <control type="image">
                <width>284</width>
                <texture colordiffuse="FF000000" diffuse="fen_diffuse/landscape_w284_h160.png">fen_common/white.png</texture>
            </control>
            <control type="image">
                <width>284</width>
                <aspectratio>scale</aspectratio>
                <texture diffuse="fen_diffuse/landscape_w284_h160.png">$INFO[Window.Property(thumb)]</texture>
                <animation effect="fade" start="100" end="65" time="0">WindowOpen</animation>
            </control>
            <control type="image">
                <top>80</top>
                <left>72</left>
                <width>140</width>
                <texture>$INFO[Window.Property(clearlogo)]</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="fade" start="100" end="80" time="0">WindowOpen</animation>
            </control>
            <control type="image">
                <left>5</left>
                <top>5</top>
                <width>30</width>
                <height>30</height>
                <align>left</align>
                <aligny>top</aligny>
                <aspectratio aligny="top">keep</aspectratio>
                <texture colordiffuse="B3CCCCCC">fen_common/fen.png</texture>
                <animation effect="fade" start="100" end="70" time="0">WindowOpen</animation>
            </control>
            <control type="group">
                <left>275</left>
                <!-- Main Heading & Timer -->
                <control type="group">
                    <!-- Autoplay & Autoscrape -->
                    <control type="group">
                        <visible>String.IsEmpty(Window.Property(pause_timer))</visible>
                        <control type="label">
                            <visible>String.IsEqual(Window.Property(play_type),autoplay_nextep)</visible>
                            <left>35</left>
                            <aligny>center</aligny>
                            <height>40</height>
                            <label>[B][COLOR $INFO[Window(10000).Property(fen.main_highlight)]]$ADDON[plugin.video.fen 32811][/COLOR] $INFO[Player.TimeRemaining()][/B]</label>
                            <font>font_midi</font> <!-- FEN_33 -->
                            <textcolor>FFB7B4BB</textcolor>
                        </control>
                        <control type="label">
                            <visible>String.IsEqual(Window.Property(play_type),autoscrape_nextep)</visible>
                            <left>35</left>
                            <aligny>center</aligny>
                            <height>40</height>
                            <label>[B][COLOR $INFO[Window(10000).Property(fen.main_highlight)]]$ADDON[plugin.video.fen 33086]?[/COLOR][/B]</label>
                            <font>font_midi</font> <!-- FEN_33 -->
                            <textcolor>FFB7B4BB</textcolor>
                        </control>
                    </control>
                    <!-- Waiting For Input -->
                    <control type="label">
                        <visible>String.IsEqual(Window.Property(play_type),autoplay_nextep) + !String.IsEmpty(Window.Property(pause_timer))</visible>
                        <left>35</left>
                        <aligny>center</aligny>
                        <height>40</height>
                        <label>[B][COLOR $INFO[Window(10000).Property(fen.main_highlight)]]$ADDON[plugin.video.fen 33163][/COLOR] $INFO[Window.Property(pause_timer)][/B]</label>
                        <font>font_midi</font> <!-- FEN_33 -->
                        <textcolor>FFB7B4BB</textcolor>
                    </control>
                </control>
                <!-- Text Body -->
                <control type="label">
                    <top>45</top>
                    <left>35</left>
                    <height>35</height>
                    <width>auto</width>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[Window.Property(next_ep_title)][B][COLOR $INFO[Window(10000).Property(fen.main_highlight)]] | [/COLOR][/B]$INFO[Window.Property(next_ep_season)]x$INFO[Window.Property(next_ep_episode)][B][COLOR $INFO[Window(10000).Property(fen.main_highlight)]] | [/COLOR][/B]$INFO[Window.Property(next_ep_ep_name)]</label>
                    <font>font_tiny</font> <!-- FEN_21 -->
                    <textcolor>FFB7B4BB</textcolor>
                </control>
                <!-- Buttons Autoplay -->
                <control type="grouplist">
                    <visible>String.IsEqual(Window.Property(play_type),autoplay_nextep)</visible>
                    <left>30</left>
                    <top>100</top>
                    <width>530</width>
                    <height>70</height>
                    <orientation>horizontal</orientation>
                    <itemgap>10</itemgap>
                    <control type="button" id="10">
                        <description>Close</description>
                        <width>160</width>
                        <height>60</height>
                        <onleft>12</onleft>
                        <onright>11</onright>
                        <label>$ADDON[plugin.video.fen 32614]</label>
                        <font>font_tiny</font> <!-- FEN_21 -->
                        <textcolor>FFB7B4BB</textcolor>
                        <focusedcolor>FF302F2F</focusedcolor>
                        <texturefocus colordiffuse="FFB7B4BB" border="30">fen_common/circle.png</texturefocus>
                        <texturenofocus colordiffuse="FF4a4347" border="30">fen_common/circle.png</texturenofocus>
                        <align>center</align>
                    </control>
                    <control type="button" id="11">
                        <description>Play</description>
                        <width>160</width>
                        <height>60</height>
                        <onleft>10</onleft>
                        <onright>12</onright>
                        <label>$ADDON[plugin.video.fen 32764]</label>
                        <font>font_tiny</font> <!-- FEN_21 -->
                        <textcolor>FFB7B4BB</textcolor>
                        <focusedcolor>FF302F2F</focusedcolor>
                        <texturefocus colordiffuse="FFB7B4BB" border="30">fen_common/circle.png</texturefocus>
                        <texturenofocus colordiffuse="FF4a4347" border="30">fen_common/circle.png</texturenofocus>
                        <align>center</align>
                    </control>
                    <control type="button" id="12">
                        <description>Cancel</description>
                        <width>160</width>
                        <height>60</height>
                        <onleft>11</onleft>
                        <onright>10</onright>
                        <label>$ADDON[plugin.video.fen 32840]</label>
                        <font>font_tiny</font> <!-- FEN_21 -->
                        <textcolor>FFB7B4BB</textcolor>
                        <focusedcolor>FF302F2F</focusedcolor>
                        <texturefocus colordiffuse="FFB7B4BB" border="30">fen_common/circle.png</texturefocus>
                        <texturenofocus colordiffuse="FF4a4347" border="30">fen_common/circle.png</texturenofocus>
                        <align>center</align>
                    </control>
                </control>
                <!-- Buttons Autoscrape -->
                <control type="grouplist">
                    <visible>String.IsEqual(Window.Property(play_type),autoscrape_nextep)</visible>
                    <left>30</left>
                    <top>100</top>
                    <width>530</width>
                    <height>70</height>
                    <orientation>horizontal</orientation>
                    <itemgap>10</itemgap>
                    <control type="button" id="10">
                        <description>Now</description>
                        <width>160</width>
                        <height>60</height>
                        <onleft>12</onleft>
                        <onright>11</onright>
                        <label>$ADDON[plugin.video.fen 33090]</label>
                        <font>font_tiny</font> <!-- FEN_21 -->
                        <textcolor>FFB7B4BB</textcolor>
                        <focusedcolor>FF302F2F</focusedcolor>
                        <texturefocus colordiffuse="FFB7B4BB" border="30">fen_common/circle.png</texturefocus>
                        <texturenofocus colordiffuse="FF4a4347" border="30">fen_common/circle.png</texturenofocus>
                        <align>center</align>
                    </control>
                    <control type="button" id="11">
                        <description>Yes</description>
                        <width>160</width>
                        <height>60</height>
                        <onleft>12</onleft>
                        <onright>11</onright>
                        <label>$ADDON[plugin.video.fen 32824]</label>
                        <font>font_tiny</font> <!-- FEN_21 -->
                        <textcolor>FFB7B4BB</textcolor>
                        <focusedcolor>FF302F2F</focusedcolor>
                        <texturefocus colordiffuse="FFB7B4BB" border="30">fen_common/circle.png</texturefocus>
                        <texturenofocus colordiffuse="FF4a4347" border="30">fen_common/circle.png</texturenofocus>
                        <align>center</align>
                    </control>
                    <control type="button" id="12">
                        <description>No</description>
                        <width>160</width>
                        <height>60</height>
                        <onleft>11</onleft>
                        <onright>10</onright>
                        <label>$ADDON[plugin.video.fen 32828]</label>
                        <font>font_tiny</font> <!-- FEN_21 -->
                        <textcolor>FFB7B4BB</textcolor>
                        <focusedcolor>FF302F2F</focusedcolor>
                        <texturefocus colordiffuse="FFB7B4BB" border="30">fen_common/circle.png</texturefocus>
                        <texturenofocus colordiffuse="FF4a4347" border="30">fen_common/circle.png</texturenofocus>
                        <align>center</align>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
