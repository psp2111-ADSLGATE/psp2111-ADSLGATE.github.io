                <centerleft>100</centerleft>
                <height>50</height>
                <width>50</width>
                <control type="button" id="310">
                    <texturenofocus />
                    <include>Texture_KeyboardButton</include>
                    <ondown>SetFocus(303,0,absolute)</ondown>
                    <onup>309</onup>
